{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}